{
    "name": "reedware/laravel-relation-joins",
    "description": "Adds the ability to join on a relationship by name.",
    "keywords": [
        "laravel",
        "relation",
        "join",
        "eloquent",
        "query"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Tyler Reed",
            "email": "tylernathanreed@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/contracts": "^9.52|^10.0",
        "illuminate/database": "^9.52|^10.0",
        "illuminate/support": "^9.52|^10.0"
    },
    "require-dev": {
        "illuminate/container": "^9.52|^10.0",
        "mockery/mockery": "^1.6.6",
        "php-coveralls/php-coveralls": "^2.4",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Reedware\\LaravelRelationJoins\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reedware\\LaravelRelationJoins\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Reedware\\LaravelRelationJoins\\LaravelRelationJoinServiceProvider"
            ]
        }
    },
    "scripts": {
        "test:coverage": [
            "@test:suite",
            "vendor/bin/php-coveralls -v --dry-run"
        ],
        "test:style": "vendor/bin/phpcs",
        "test:suite": "vendor/bin/phpunit --verbose"
    }
}
